<section class="content">
    <div class="header-dash">
        {{> headerDash }}
    </div>
    <hr>
    <section id="form-dash">
        <form action="/dash/{{servers.id}}/send-cmd" method="POST" onsubmit="alertT()">
            <input type="text" name="msgText" id="msgText" autocomplete="off" required placeholder="Escribe tu mensaje">
            <select name="canalID" id="canalID">
                <option value="none">Selecciona un canal</option>
                {{#each canales}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
            <input type="submit" id="btnEnviar" value="Enviar">
        </form>
        <br>
        <form action="/dash/{{servers.id}}/set-prefix" method="POST">
            <input type="text" name="setPrefix" id="setPrefix" autocomplete="on" required placeholder="Escribe tu prefix">
            <input type="submit" id="sendPrefix" value="Enviar">
        </form>
        <br>
        <form action="/dash/{{servers.id}}/saveRol" method="POST">
            <select name="adminRol" id="adminRol">
                <option value="@everyone">Predeterminado</option>
                {{#each roles}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
            <input type="submit" id="sendPrefix" value="Actualizar">
        </form>
    </section>
    {{#if guild}}
    <h2>El prefix de este servidor es: {{guild.prefix}}</h2>
        {{#if guild.hasRol}}
        <h3>El rol de los admin. es: {{guild.adminRol}}</h3>
        {{else}}
        <h3>No hay rol de moderaci√≥n asignado.</h3>
        {{/if}}
    {{else}}
     <h2>No hay prefix personalizado para este servidor</h2>
    {{/if }}
</section>
